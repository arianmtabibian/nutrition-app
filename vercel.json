{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://nutrition-back-jtf3.onrender.com"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://nutrition-back-jtf3.onrender.com"
    }
  },
  "github": {
    "autoAlias": false,
    "autoJobCancelation": false
  },
  "cleanUrls": true,
  "trailingSlash": false
}